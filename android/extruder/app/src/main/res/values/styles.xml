<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">#00695C</item>
        <item name="colorAccent">#009688</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="SignInTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#00695C</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:colorButtonNormal">#00695C</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#B2DFDB</item>
        <item name="colorControlNormal">#B2DFDB</item>
    </style>

    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <style name="MinTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
